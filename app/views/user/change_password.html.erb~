

<h3>Change password</h3>
<%= form_for :user, :url => {:action => 'change_password'} do |f|-%>
<%#= f.error_messages_for 'user' %>
 <label for="loginid">Username</label><br/>
               <%= f.text_field :login, :size => '30'%><br/><br/>
               <label for="password">Old Password</label><br/>
               <%= f.password_field :password, :size => '30'%><br/><br/>

<label for="user_password">Choose password:</label><br/>
<%= f.password_field :password, :size => 20, :value=>"" %><br/>

<label for="user_password_confirmation">Confirm password:</label><br/>
<%= f.password_field :password_confirmation, :size => 20, :value=>"" %><br/>


<%= f.submit "Reset" %>

<% end %>
